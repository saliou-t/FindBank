{% extends 'base.html.twig' %}

{% block title %}Banques{% endblock %}

{% block body %}
  <div class="" style="margin-left:10%; margin-top:10px">

	<div class="row text-left mb-1">
			<div class="col-3">
				<a class="btn btn-primary" href="{{ path('banques_controller2_index') }}"> ← Retour </a>
			</div>
		</div>
		<div class="card shadow-lg p-3 mb-5 bg-white rounded border-primary border-primary" style="max-width:75%">
			<div class="row card-header">
			
				<div class="col-5 text-left"><strong>{{banque.operateur.nom}}</strong></div>	
				<div class="col-5 text-right"> 
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-phone" viewBox="0 0 16 16">
						<path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h6zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z"/>
						<path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
					</svg>
					{{banque.telephone}}
				</div>	
				<div class="col">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
						<path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
					</svg>
					<em>
					{% for votes in banque.votes %}
						<strong> {{votes.valeur}}</strong>
					{% endfor %}</em>/5
				</div>
			</div>
			<div class="row">
				<div class="col-3 mt-4">
					<img src="http://placehold.it/150x150" alt="..." class="img-thumbnail">
				</div>
				<div class="col">
					<div class="card-body">
						<h4 class="card-title">{{banque.localite.nom}}</h4>
						<p class="card-text">
							Operator libelle :{{banque.operateur.libelle}}
						</p>
					</div>
					<div class="row mt-4">
						<div class=" col-7 car-footer ">
							<p> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
								<path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"/>
								<path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/></svg>
								{{banque.adresse}}
							</p>
						</div>
						<div class="col-2">
						
						</div>
						<div class="col h6">
							<strong>{{banque.joursOuverture}}</strong> de <strong>{{banque.heurOuverture}}</strong> à <strong> {{banque.heurFermiture}}</strong>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-4"></div>
				<div class="col-4 text-center mt-4">
					<a href="#"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-fill" viewBox="0 0 16 16">
						<path fill-rule="evenodd" d="M4 4a4 4 0 1 1 4.5 3.969V13.5a.5.5 0 0 1-1 0V7.97A4 4 0 0 1 4 3.999zm2.493 8.574a.5.5 0 0 1-.411.575c-.712.118-1.28.295-1.655.493a1.319 1.319 0 0 0-.37.265.301.301 0 0 0-.057.09V14l.002.008a.147.147 0 0 0 .016.033.617.617 0 0 0 .145.15c.165.13.435.27.813.395.751.25 1.82.414 3.024.414s2.273-.163 3.024-.414c.378-.126.648-.265.813-.395a.619.619 0 0 0 .146-.15.148.148 0 0 0 .015-.033L12 14v-.004a.301.301 0 0 0-.057-.09 1.318 1.318 0 0 0-.37-.264c-.376-.198-.943-.375-1.655-.493a.5.5 0 1 1 .164-.986c.77.127 1.452.328 1.957.594C12.5 13 13 13.4 13 14c0 .426-.26.752-.544.977-.29.228-.68.413-1.116.558-.878.293-2.059.465-3.34.465-1.281 0-2.462-.172-3.34-.465-.436-.145-.826-.33-1.116-.558C3.26 14.752 3 14.426 3 14c0-.599.5-1 .961-1.243.505-.266 1.187-.467 1.957-.594a.5.5 0 0 1 .575.411z"/>
					</svg>Itinéraire
					</a>
				</div>
				<div class="col-4"></div>
			</div>
		</div>
		
	</div>
	</div>


{% endblock %}
