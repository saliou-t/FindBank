{% extends 'base.html.twig' %}

{% block title %}Hello OperateursController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="{{path ('banques')}} ">Accueil</a></li>
  <li class="breadcrumb-item active">Opérateurs</li>
</ol>

    <h1>Liste des opérateurs</h1>

<table class="table table-bordered text-center">
  <thead>
    <tr class="">
      <th >#</th>
      <th >Opérateur</th>
      <th >Nombre de point</th>
      <th >Chiffre d'affaire</th>
      <th >Libellé</th>                          
    </tr>
  </thead>
  <tbody>
    {% for op in operateurs %}
        <tr class="table-primary">
            <th scope="row text-center">{{op.id}}</th>
            <td>{{op.nom}}</td>
            <td>{{op.nbreBanks}} </td>
            <td>{{op.chiffreAffaire}} </td>
            <td>{{op.libelle}}</td>
        </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% endblock %}
