{% extends 'base.html.twig' %}

{% block title %}Hello OperateursController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="{{path ('banques')}} ">Accueil</a></li>
  <li class="breadcrumb-item active">Opérateurs</li>
</ol>
    <h1>Hello ✅</h1>

<table class="table table-hover">
  <thead>
    <tr class="border streeped">
      <th scope="col-2">#</th>
      <th scope="col-3 ">Opérateur</th>
      <th scope="col-2">Nombre de point</th>
      <th scope="col-3">Chiffre d'affaire</th>
      <th scope="col">Libellé</th>
    </tr>
  </thead>
  <tbody>
    {% for op in operateurs %}
        <tr class="table-active">
            <a href="">
                <th scope="row text-center">{{op.id}}</th>
                <td>{{op.nom}}</td>
                <td>{{op.nbreBanks}} </td>
                <td>{{op.chiffreAffaire}} </td>
                <td>{{op.libelle}}</td>
            </a>
        </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% endblock %}
